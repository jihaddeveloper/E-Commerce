                            <label for="sataPort"> sataPort</label>
                            <input type="text" name="sataPort" class="form-control" value="{{  sataPort}}"
                                placeholder="" >
                        </div>
                        <div class="form-group">
                            <label for="audioChipset"> audioChipset</label>
                            <input type="text" name="audioChipset" class="form-control" value="{{  audioChipset}}"
