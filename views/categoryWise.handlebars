
<div class="container-fluid" style="width:80%;min-height: 700px">
    {{# if products}}
    <h1 style="margin-left: auto; margin-right: auto; ">{{category}}</a></h1>
    <div class="row">
        {{!-- Filter option shows --}}
        <div class="col-sm-3 ">
            <Div class="well">


                <label for="priceRange">Price Range:</label>
                <div class="radio">
                    <label><input type="radio" name="priceRange">80K-100K</label>
                </div>
                <div class="radio">
                    <label><input type="radio" name="priceRange">60K-79K</label>
                </div>
                <div class="radio ">
                    <label><input type="radio" name="priceRange">30K-59K</label>
                </div>
                <div class="radio ">
                    <label><input type="radio" name="priceRange">10K-29K</label>
                </div>
                <div class="radio ">
                    <label><input type="radio" name="priceRange">1K-9K</label>
                </div>
                <hr>


                <label for="filterByColor">Color:</label>
                <div class="radio">
                    <label><input type="radio" name="filterByColor">Red</label>
                </div>
                <div class="radio">
                    <label><input type="radio" name="filterByColor">Blue</label>
                </div>
                <div class="radio ">
                    <label><input type="radio" name="filterByColor">Black</label>
                </div>
                <div class="radio ">
                    <label><input type="radio" name="filterByColor">Gray</label>
                </div>
                <div class="radio ">
                    <label><input type="radio" name="filterByColor">Pink</label>
                </div>
            </Div>



        </div>

        {{!-- products shows --}}
        <div class="col-sm-9 ">
            {{# each products }}
            <div class="row">

                {{# each this}}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail" style="height: 340px">
                        <a href="/singleProduct/{{ this._id }}"><img style="height: 200px" class="img-responsive" src="image/{{ this.imagePath.filename }}" alt="{{ this.imagePath }}"></a>
                        <div class="caption">
                            <h3>{{ this.title}}</h3>
                         
                            <div class="clearfix">
                                <div class="price pull-left">{{ this.price }} TK</div>
                                <a href="/singleProduct/{{ this._id }}" class="btn btn-default pull-right" role="button">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/each}}
        </div>
    </div>
     {{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2 id="search-result" onclick="searchPartial()">No Item in found</h2>
        </div>
    </div>
    {{/if}}
</div>