          alt="...">
        <div class="carousel-caption">
          ...
        </div>
      </div>
      <div class="item">
        <img style="height: 600px; width: 100%" src="https://images.pexels.com/photos/18105/pexels-photo.jpg?auto=compress&cs=tinysrgb&h=750&w=1260"
          alt="...">
        <div class="carousel-caption">
          ...
        </div>
      </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <hr>


  <h3><a href="/products/category/mobile" style="text-decoration: none">Exclusive Products</a></h3>

  {{# each productsPinned }}

  <div class="row ">
    {{# each this}}
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail" style="height: 370px;background-color: #efe0ae">
        <a href="/singleProduct/{{ this._id }}"><img style="height: 180px" class="img-responsive" src="{{ this.imagePath }}"
            alt="{{ this.title}}"></a>

        <div class="caption">
          <h5> <strong>{{ this.title}}</strong></h5>
          <h6 style=>Product ID: 33.098.567 </h6><br>

          <div class="clearfix">
            <div class="price pull-left">
              <h4>TK {{ this.price }} </h4>
            </div>
            <a href="/singleProduct/{{ this._id }}" class="btn btn-default pull-right" role="button">Details</a>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/each}}

